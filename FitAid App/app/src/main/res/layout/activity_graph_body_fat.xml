<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_page_top"
    tools:context=".Graph_BodyFat">

    <ImageButton
        android:id="@+id/toNext"
        android:layout_width="37dp"
        android:layout_height="33dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="23dp"
        android:background="@color/colorAccent"
        android:contentDescription="TODO"
        android:scaleX="-1"
        app:srcCompat="?android:attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/tv_BodyFat_title"
        android:layout_width="161dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="107dp"
        android:text="Body Fat"
        android:textColor="@color/colorAccent"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_bodyFat"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tv_BodyFat_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="71dp"
        android:background="@color/mainPageColor"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        tools:targetApi="p" />

    <ImageButton
        android:id="@+id/backToWeight"
        android:layout_width="37dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="21dp"
        android:background="@color/colorAccent"
        android:contentDescription="TODO"
        app:srcCompat="?android:attr/homeAsUpIndicator" />

    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/btn_dialog" />
</RelativeLayout>